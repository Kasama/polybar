ws-icon-4 = 5;/b/
ws-icon-5 = 6;6
ws-icon-6 = 7;u
ws-icon-7 = 8;8
ws-icon-8 = 9;
ws-icon-9 = 0;

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

label-mode = %mode%
